FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default             CrankNicolson 1;
    ddt(U)_CN           1;
}

SIgravityWaves false;

gradSchemes
{
    default         none;
    linearUpwind    Gauss linear;
    grad(U)         Gauss linear;
    curl(U)         Gauss linear;
    grad(theta)     Gauss linear;
}

divSchemes
{
    default none;
    div(U,theta)                            Gauss vanLeer;
    div(U,u)                                Gauss linearUpwind linearUpwind;
    div(volFlux,U)                          Gauss linearUpwind linearUpwind;
    div(volFlux,theta)                      Gauss vanLeer;
    div(((rho*nuEff)*dev2(T(grad(U)))))     Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        linear;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


