FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1e-5;
// to match buoyantBoussinesqPimpleFoam "BenardCells" case

boundaryField
{
    ground
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    top
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    left
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    right
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    frontAndBack
    {
        type            empty;
    }
}

// ************************************************************************* //
