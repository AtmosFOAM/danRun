FoamFile
{
    version         2.0;
    format          binary;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          controlDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     boussinesqFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         400;

deltaT          0.0125;

writeControl    runTime;

writeInterval   2;

purgeWrite      0;

writeFormat     binary;

writePrecision  12;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep no;
maxCo          0.5;

functions
{
    minMaxMagUBP
    {
        type        fieldMinMax;
        libs        ("libfieldFunctionObjects.so");
        write       yes;
        log         yes;
        location    yes;
        mode        magnitude;
        fields
        (
            u
            b
            P
        );
    }
}

libs
(
    "libExnerTheta.so"
    "libfiniteVolumeAtmosFOAMtools.so"
    "libcompressibleTurbulenceModels.so"
    "libatmosphericModels.so"
);



