FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          thermophysicalProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


T0        300;

thermoType
{
    type            heRhoThermo;
    energy          sensibleEnthalpy;
    specie          specie;
    equationOfState perfectGas;
    thermo          hConst;
    transport       const;
    mixture         pureMixture;
}

mixture//  dry air: 1 28.97 1005 0 1.846e-05 0.707;
{
    specie
    {
        molWeight       28.97;
    }
    thermodynamics
    {
        Cp              1005;
        Hf              0;  // reference latent heat of fusion
    }
    transport   // chosen so that Ra/Racrit = 28 with Pr = 10 (after Lorenz 1963)
    {
        mu              1.387e-04;
        Pr              0.707;
    }
}

pRef      100000;

