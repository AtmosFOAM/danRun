FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;  // implies hydrostatic balance, since p_rgh is 
                            // pressure - hydrostatic pressure

boundaryField
{
    top
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    ground
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
}

// ************************************************************************* //
