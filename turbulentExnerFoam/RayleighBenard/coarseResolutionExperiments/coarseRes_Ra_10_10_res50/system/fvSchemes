FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         CrankNicolson 0.5;
    ddt(rho,U)_CN   0.5;
    ddt(rho,epsilon) Euler;
    ddt(rho,k) Euler;
}

SIgravityWaves false;

gradSchemes
{
    default         Gauss linear;
}

