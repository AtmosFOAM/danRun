FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;

boundaryField
{
    ground
    {
        type            hydrostatic_p_rgh;
        value           uniform 1e5;
        gradient        uniform 0;
    }
    top
    {
        type            fixedValue;
        value           uniform 9.8e4;
        gradient        uniform 0;
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
}


