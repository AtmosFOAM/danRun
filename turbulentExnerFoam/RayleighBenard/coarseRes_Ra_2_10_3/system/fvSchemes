FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         CrankNicolson 0.5;
    ddt(rho,U)_CN   0.5;
    ddt(rho,epsilon) Euler;
    ddt(rho,k) Euler;
}

SIgravityWaves false;

gradSchemes
{
    default         none;
    linearUpwind    Gauss linear;
    grad(U)         Gauss linear;
    curl(U)         Gauss linear;
}

divSchemes
{
    default none;
    div(U,theta)   Gauss linear;
    div(U,u)   Gauss linear;
    div(phi,U)   Gauss linear;
    div(phi,theta)   Gauss linear;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
    default         Gauss midPoint uncorrected;
}

interpolationSchemes
{
    default        midPoint;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
    snGrad(rho)     uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


