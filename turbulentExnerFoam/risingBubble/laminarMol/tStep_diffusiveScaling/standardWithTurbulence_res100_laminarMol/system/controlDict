FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          controlDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application buoyantFoam;

startFrom       startTime;
//startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         1000;

deltaT          8; // calculate via deltaT_0 * (deltaX)^2 / (deltaX_0)^2
// for diffusive time-step scaling
// deltaT_0 = 2 s, deltaX_0 = 100 m (= 20,000m / 200 grid points)
// or via deltaT_0 * deltaX / deltaX_0 for advective scaling

writeControl    runTime;

writeInterval   100;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep no;
maxCo          0.5;

libs            ("libExnerTheta.so" "libfiniteVolumeAtmos.so" "libfiniteVolumeAtmosFOAMtools.so");

// ************************************************************************* //
